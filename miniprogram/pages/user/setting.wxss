/* pages/user/setting.wxss */
page{
  font-size: 26rpx;
}
.h1{
  font-weight: 600rpx;
  font-size: 30rpx;
  margin-left: 25rpx;
  line-height: 50rpx;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
  border-bottom: 5rpx solid black;
}
.p{
  line-height: 32rpx;
  margin-top: 20rpx;
}
.oneline{
  display: flex;
  align-items: center;
  min-height: 120rpx;
  margin-top: 20rpx;
  width: 700rpx;
  margin: 0 auto;
}
.text{
  width: 260rpx;
}
.input{
  width:400rpx;
  border:1rpx solid #ccc;
  padding:5rpx 15rpx;
  border-radius:5rpx;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
}
.picker{
  line-height: 70rpx;
}
.biginput{
  height:70rpx;
  line-height:70rpx;
  width: 500rpx;
}
.smalltip{
  font-size: 20rpx;
  color: #ccc;
  margin-left: 25rpx;
}
.save{
  width: 300rpx;
  border: 1rpx solid #ccc;
  margin-top: 50rpx;
}
.mask{
  position: fixed;
  z-index: 210;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
}
.content{
  position: absolute;
  width: 600rpx;
  /*height: 400rpx;*/
  padding: 30rpx;
  top: 20%;
  left: 50%;
  margin-top: -150rpx;
  margin-left: -300rpx;
  background-color: white;
  z-index: 220;
  border-radius: 10rpx;
}