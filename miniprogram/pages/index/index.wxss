/**index.wxss**/
.container{
  width: 750rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}
.banner-img{
  width: 750rpx;
  height: 375rpx;
  display: block;
}
.notice-wrap{
  width: 700rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  box-shadow: 3rpx 3rpx #eee;
  background-color: white;
}
.notice-swiper{
  width: 100%;
  height: 50rpx;
}
.one-notice{
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.one-notice .btn{
  display: inline-block;
  border: 1rpx solid #ccc;
  padding: 5rpx;
  margin-right: 10rpx;
}
.one-notice .label{
  display: inline-block;
  max-width: 570rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.one-card{
  border: 1rpx solid #ccc;
  box-shadow: 5rpx 5rpx 5rpx #ddd;
  width: 690rpx;
  margin: 20rpx auto;
  padding: 20rpx 10rpx;
}
.one-card .top{
  display: flex;
  align-items: top;
}
.one-card .left{
  margin-right: 20rpx;
}

.one-card .images-more{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.one-card .images-more image{
  width:180rpx;
  height:160rpx;
  margin-bottom: 10rpx;
  margin-right:10rpx;
}
.one-card .title{
  font-size: 26rpx;
  line-height: 52rpx;
}
.one-card .content{
  font-size: 24rpx;
  line-height: 28rpx;
}
.one-card .name{
  font-size: 32rpx;
  font-weight: bold;
}
.one-card .utag{
  font-size: 26rpx;
  font-weight: normal;
  border: 1rpx solid #ccc;
  padding: 0 10rpx;
  margin-left: 20rpx;
}
.one-card .header-img{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 5rpx;
}

.function{
  padding: 20rpx 30rpx 0rpx 10rpx;
  margin-top: 20rpx;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 34rpx;
}
.function view{
  display: flex;
  align-items: center;
  line-height: 50rpx;
  height: 50rpx;
}
.function .icon{
  font-size: 48rpx;
  line-height: 48rpx;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  /*display: inline-block;*/
}

.userinfo{
  position: fixed;
  z-index: 100;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.userinfo .mask{
  position: fixed;
  z-index: 110;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
}
.userinfo .content{
  position: absolute;
  width: 600rpx;
  height: 400rpx;
  padding: 30rpx;
  top: 50%;
  left: 50%;
  margin-top: -150rpx;
  margin-left: -300rpx;
  background-color: white;
  z-index: 200;
  border-radius: 30rpx;
}
.userinfo .title{
  text-align: center;
  font-size: 34rpx;
  line-height: 64rpx;
}
.userinfo .userinfo-btn {
  width: 80%;
  margin-top: 50rpx;
}


.footer{
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  border-top: 1px solid #ccc;
  background-color: white;
}
.footer .middle{
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
.footer view{
  width: 33%;
  text-align: center;
  font-size: 32rpx;
  line-height: 90rpx;
}

.reginfo{
  position: fixed;
  z-index: 200;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  font-size: 26rpx;
}
.reginfo .p{
  line-height: 32rpx;
  margin-top: 20rpx;
}
.reginfo .oneline{
  display: flex;
  align-items: center;
  min-height: 80rpx;
  margin-top: 20rpx;
}
.reginfo .text{
  width: 200rpx;
}
.reginfo .input{
  width:300rpx;
  border:1px solid #ccc;
  padding:5rpx 15rpx;
  border-radius:5rpx;
  box-sizing: border-box;
}
.reginfo .biginput{
height:70rpx;
line-height:70rpx;
  width: 500rpx;
}
.smalltip{
  font-size: 20rpx;
  color: #ccc;
}
.reginfo .save{
  width: 300rpx;
  border: 1px solid #ccc;
  margin-top: 50rpx;
}
.reginfo .mask{
  position: fixed;
  z-index: 210;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
}
.reginfo .content{
  position: absolute;
  width: 600rpx;
  /*height: 400rpx;*/
  padding: 30rpx;
  top: 20%;
  left: 50%;
  margin-top: -150rpx;
  margin-left: -300rpx;
  background-color: white;
  z-index: 220;
  border-radius: 10rpx;
}
