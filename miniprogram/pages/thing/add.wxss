/* pages/thing/add.wxss */
page {
  background-color: #fff;
}
.container{
}
.list{
  padding: 40rpx;
  background-color: #f4f4f4;
}
.list-item {
  width: 100%;
  padding: 0;
  font-size: 34rpx;
  line-height: 54rpx;
  color: #007aff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.list-item input{
  color: black;
  line-height: 88rpx;
  height: 88rpx;
  width: 100%;
  font-size: 28rpx;
  font-weight: 600;
  color: #595C69;
}
.list-item textarea{
  color: black;
  width: 100%;
  padding: 30rpx 0;
  overflow: hidden;
  font-size: 28rpx;
  font-weight: 400;
  color: #595C69;

}
.img-list{
  display: flex;
  margin-top: 40rpx;
  flex-flow: flex-start;
  flex-wrap:wrap;
}
.one-image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.one-image image{
  width: 100%;
  height: 100%;
}
.one-image .icon-close{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  background-image: url('https://7765-wenya-product-2yyx5-1259345295.tcb.qcloud.la/assets/icon-close.png?sign=0e6875b5f5240795f4cb1bf15d61b2eb&t=1565678970');
  background-size: 40rpx 40rpx;
}
.addImage{
  display: inline-block;
  border: 1rpx dashed #ccc;
  /*background-color: white;*/
  width: 200rpx;
  height: 200rpx;
  line-height: 180rpx;
  text-align: center;
  font-size: 100rpx;
  font-weight: 100;
}
.btn-list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.btn-list button{
  width: 300rpx;
  text-align: center;
}
.h3{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.oneform{
  display: flex;
  font-size: 24rpx;
  align-items: center;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  margin-top: 28rpx;
}
.oneform text{
  margin-right: 20rpx;
}
