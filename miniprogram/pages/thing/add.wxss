/* pages/thing/add.wxss */
.container{
  padding: 40rpx;
}
.list-item {
  width: 100%;
  padding: 0;
  font-size: 34rpx;
  line-height: 54rpx;
  color: #007aff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.list-item input{
  color: black;
  line-height: 88rpx;
  height: 88rpx;
  width: 100%;
}
.list-item textarea{
  color: black;
  width: 100%;
  padding: 30rpx 0;
  overflow: hidden;
}
.img-list{
  display: flex;
  margin-top: 40rpx;
  flex-flow: flex-start;
  flex-wrap:wrap;
}
.one-image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.one-image image{
  width: 100%;
  height: 100%;
}
.one-image .icon-close{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  border: 1rpx solid #ccc;
}
.addImage{
  display: inline-block;
  border: 1px solid #ccc;
  background-color: white;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 42px;
}
.btn-list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 100rpx;
}
.btn-list button{
  width: 300rpx;
  text-align: center;
}
