.icon-label{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  margin-right: 25rpx;
}
.icon-right{
  display: inline-block;
  width: 16rpx;
  height: 24rpx;
}



.box-flex{
  display: flex;
  align-items: center;
}
.btn-label{
  display: inline-block;
  background-color: #FFE9E6;
  border-radius: 16rpx;
  padding: 0rpx 30rpx;
  font-size: 20rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  color: #121212;
}
.btn-save{
  background-image: linear-gradient(151deg, #ED7E74 0%, #D54840 100%);
  border-radius: 36rpx;
  min-width: 272rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  padding: 0 40rpx;
  color: white;
  font-size: 32rpx;
}
.btn-ghost{
  background: #F4F4F4;
  border-radius: 36rpx;
  min-width: 272rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #595C69;
}